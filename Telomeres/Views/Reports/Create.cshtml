@model FlowWebApp.Models.Report

@{
    ViewData["Title"] = "Request a new Report";
}

<h1>Request a new report</h1>
<h5>Upload user file</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data"  method="post" >
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                   
            <div class="form-group">
                <input class="form-control" type="file"  asp-for="UploadFile" />
                <span class="invalid-feedback" asp-validation-for="UploadFile"></span>
            </div>
            <div class="space-v"></div>
            <div class="form-group">
                <input type="submit" value="Request" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="space-v"></div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
