            <td>
                <i class="fa fa-file-pdf" style="color: dimgray"></i>
                A_filename
            </td>
            <td>
                <span style="color: green;" title="This file is allowed for download">
                    <i class="fa fa-check"></i>
                    Available
                </span>
                |
                <span style="color: darkred;" title="This file needs a prior payment for download">
                    <i class="fa fa-clock"></i>
                    Pending payment
                </span>
            </td>
            <td>


                <a href="" class="btn btn-sm btn-primary ">
                    <i class="fa fa-download"></i>
                    Download
                </a>
                |
                <a href="" class="btn btn-sm btn-secondary">
                    <i class="fa fa-credit-card"></i>
                    Pay
                </a>
            </td>

        </tr>*@
    </tbody>
    <tfoot>
        <tr>
            <th colspan="2">(@Model.Count()) Matches found</th>
        </tr>
    </tfoot>
</table>


@if (ViewBag.show_success)
{
<div class="alert alert-sm alert-success">
    <i class="fa fa-check"></i>
    Your file uploaded successfully
    @ViewBag.message
</div>
}
@if (ViewBag.show_error)
{
  
<div class="alert alert-sm alert-danger">
    <i class="fa fa-info"></i>
    The uploaded file is not valid
    @ViewBag.message
</div>
}