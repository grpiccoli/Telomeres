@model IEnumerable<FlowWebApp.Models.Report>

@{
    ViewData["Title"] = "My Reports";
}

<h3>
    <b>My Reports</b>
</h3>
<span>Inbox</span>
<div class="space-v"></div>
<p>
    <a asp-controller="UploadFile" asp-action="Index" class="btn btn-primary btn-sm">Request a new report</a>
</p>

<hr />

<table class="table">
    <thead>
        <tr>
            <th style="width: 50%;">Report</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="100">
                    <i class="fa fa-inbox"></i>
                    No reports in your inbox
                </td>
            </tr>
        }



        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DownloadFile.FileName</td>
                <td>
                    <span style="color: green;">Available </span>
                    <span style="color: red;">Pending payment</span>
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
        <tr title="this row is a demo for a existent record for your report">
            <td>
                <i class="fa fa-file-pdf" style="color: dimgray"></i>
                A_filename
            </td>
            <td>
                <span style="color: green;" title="This file is allowed for download">
                    <i class="fa fa-check"></i>
                    Available
                </span>
                |
                <span style="color: darkred;" title="This file needs a prior payment for download">
                    <i class="fa fa-clock"></i>
                    Pending payment
                </span>
            </td>
            <td>


                <a href="" class="btn btn-sm btn-primary ">
                    <i class="fa fa-download"></i>
                    Download
                </a>
                |
                <a href="" class="btn btn-sm btn-secondary">
                    <i class="fa fa-credit-card"></i>
                    Pay
                </a>
            </td>

        </tr>
    </tbody>
    <tfoot>
        <tr>
            <th colspan="2">Found (@Model.Count()) matches</th>
        </tr>
    </tfoot>
</table>


@if (ViewBag.show_success)
{
<div class="alert alert-sm alert-success">
    <i class="fa fa-check"></i>
    Your file uploaded successfully
    @ViewBag.message
</div>
}
@if (ViewBag.show_error)
{
  
<div class="alert alert-sm alert-danger">
    <i class="fa fa-info"></i>
    The uploaded file is not valid
    @ViewBag.message
</div>
}